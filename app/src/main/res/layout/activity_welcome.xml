<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_welcome_gradient"
    android:padding="24dp">

<com.google.android.material.card.MaterialCardView
android:id="@+id/cardWelcomeImage"
android:layout_width="200dp"
android:layout_height="200dp"
app:cardCornerRadius="100dp"
app:cardElevation="8dp"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintHorizontal_bias="0.5"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintVertical_bias="0.25">

<ImageView
    android:id="@+id/ivWelcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/welcome_image_desc"
    android:src="@drawable/music_logo"
    android:scaleType="centerCrop"/>
</com.google.android.material.card.MaterialCardView>

<TextView
android:id="@+id/tvWelcomeTitle"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="@string/welcome_title"
android:textAppearance="?attr/textAppearanceHeadlineMedium"
android:textColor="?attr/colorOnPrimaryContainer"
android:textStyle="bold"
android:gravity="center"
android:paddingTop="16dp"
app:layout_constraintTop_toBottomOf="@id/cardWelcomeImage"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"/>

<TextView
android:id="@+id/tvWelcomeSubtitle"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="@string/welcome_subtitle"
android:textAppearance="?attr/textAppearanceBodySmall"
android:textColor="?attr/colorOnPrimaryContainer"
android:gravity="center"
android:paddingTop="8dp"
app:layout_constraintTop_toBottomOf="@id/tvWelcomeTitle"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"/>

<com.google.android.material.button.MaterialButton
android:id="@+id/btnEnter"
style="@style/Widget.MaterialComponents.Button"
android:layout_width="0dp"
android:layout_height="56dp"
android:text="@string/welcome_button_enter"
android:textAllCaps="false"
android:letterSpacing=".05"
app:cornerRadius="28dp"
app:icon="@drawable/ic_arrow_forward"
app:iconPadding="8dp"
app:iconGravity="textEnd"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="48dp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
